<div class="tile is-ancestor mx-2 my-2">
  {{! using a partial file to call the left tile; the tille will display 
    different information based on if the user is loged in or not}}
  <div class="tile is-parent">
    <article class="tile is-child notification is-primary">
      {{#each data}}
        {{#if city_name}}
          <li class="button is-dark is-outlined box">{{city_name}}</li>
        {{/if}}
      {{/each}}
    </article>
  </div>

  {{! right side of the tile were all the posts will be displayed}}
  <div class="tile is-8 has-background-dark">
    <div class="tile is-vertical">
      {{#each data}}
        {{#if title}}
          <div class="tile is-parent" id="posts-container">
            <div class="card box">
              {{! <header class="card-header title"> }}
              <nav class="level">
                <div class="level-left">
                  <p class="level-item title has-text-centered">
                    <a href="/post/{{id}}">
                      {{title}}
                    </a>
                  </p>
                </div>
                <div class="level-right">
                  <p class="level-item subtitle is-6 has-text-centered">
                    {{location.city_name}},
                    {{location.state}}
                  </p>
                </div>
              </nav>
              {{! </header> }}
              <div class="card-content">
                {{! <div class="content"> }}
                {{description}}
                {{! </div> }}
              </div>
              <nav class="level">
                <div class="level-item has-text-centered">
                  <div>
                    <p class="heading">Link</p>
                    <a
                      class="title has-text-link is-italic is-6"
                      href="{{post_url}}"
                    >
                      {{post_url}}</a>
                  </div>
                </div>
                <div class="level-item has-text-centered">
                  <div>
                    <p class="heading">Username</p>
                    <p class="title is-6">
                      {{user.username}}
                    </p>
                  </div>
                </div>
                <div class="level-item has-text-centered">
                  <div>
                    <p class="heading">
                      {{format_plural "upvote" votes_count}}
                    </p>
                    <p class="title is-6">
                      {{votes_count}}
                    </p>
                  </div>
                </div>
                <div class="level-item has-text-centered">
                  <div>
                    <p class="heading">
                      {{format_plural "Comment" comments.length}}
                    </p>
                    <p class="title is-6">
                      {{comments.length}}
                    </p>
                  </div>
                </div>
                <div class="level-item has-text-centered">
                  <div>
                    <p class="heading">Created On</p>
                    <p class="title is-6">
                      {{format_date created_at}}
                    </p>
                  </div>
                </div>
              </nav>
            </div>
          </div>
        {{/if}}
      {{/each}}
    </div>
  </div>

</div>
{{! end of first tile}}

<script type="module" src="/javascript/homepage.js"></script>