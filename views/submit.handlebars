<link rel="stylesheet" type="text/css" href="stylesheets/starry/starry.css" />

<h2 class="has-text-centered is-size-2 has-text-light">Create a Post</h2>
<div class="columns is-centered my-1">
  <div class="column has-background-primary is-two-fifths">
    <div class="box">
      <form class="new-submit-form">

        <div class="field">
          <label class="label">Select a City</label>
          <div class="control has-icons-left">
            <div class="select is-normal is-primary">
              <select name="location">
                {{#each locations as |location|}}
                  <option value={{location.id}}>{{location.city_name}}</option>
                {{/each}}
              </select>
            </div>
            <div class="icon is-small is-left">
              <i class="fas fa-map-marker-alt"></i>
            </div>
          </div>
        </div>

        <div class="field">
          <div class="control">
            <input
              class="input is-primary"
              type="text"
              placeholder="title"
              name="title"
            />
          </div>
        </div>

        <div class="field">
          <div class="control">
            <input
              name="post_url"
              class="input is-primary"
              type="url"
              placeholder="www.yourlinkhere.com"
            />
          </div>
          <p class="help">optional</p>
        </div>

        <div class="field">
          <div class="control">
            <textarea
              name="description"
              class="textarea is-primary"
              placeholder="Text"
            ></textarea>
          </div>
        </div>

        <div class="field">
          <label class="label is-inline">Rating</label>
          <span id="rating-text"></span>
          <div class="control">
            <div id="star-rating"></div>
            <p class="help">optional </p>
          </div>
          <div class="control">
            <button
              id="clear-rating-button"
              class="button is-outlined is-primary is-small"
              type="button"
            >Clear Rating</button>
          </div>
        </div>

        <div class="field">
          <div class="control">
            <button class="button is-primary is-large" type="submit">
              <span class="icon is-small">
                <i class="fas fa-check"></i>
              </span>
              <span>
                Submit
              </span>
            </button>
          </div>
        </div>

      </form>
    </div>
  </div>
</div>

<!-- Local file -->
<script
  type="text/javascript"
  language="javascript"
  src="javascript/starry/starry.min.js"
></script>
<script src="/javascript/add-post.js"></script>