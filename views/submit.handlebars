<h2 class="has-text-centered is-size-2">Create a Post</h2>
<div class="columns is-centered my-1">
  <div class="column has-background-primary is-two-fifths">
    <div class="box">
      <form class="new-submit-form">
      
        <div class="field">
          <label class="label">Select a City</label>
          <div class="control">
            <div class="select is-normal is-primary">
            <select name="location">
              {{#each locations as |location|}}
              <option value={{location.id}}>{{location.city_name}}</option>
              {{/each}}
            </select>
            </div>
          </div>
        </div>

        <div class="field">
          <div class="control">
            <input class="input is-primary" type="text" placeholder="title" name="title">
          </div>
        </div>

        <div class="field">
          <div class="control">
            <input name="post_url" class="input is-primary" type="url" placeholder="www.yourlinkhere.com">
          </div>
          <p class="help">optional</p>
        </div>

        <div class="field">
          <div class="control">
            <textarea name="description" class="textarea is-primary" placeholder="Text"></textarea>
          </div>
        </div>

        <div class="field">
          <label class="label">Rating</label>
          <div class="control">
            <div class="select is-small is-primary">
              <select id="rating" name="rating">
                <option></option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
              </select>
            </div>
            <p class="help">optional</p>
          </div>
        </div>

        <div class="field">
          <div class="control">
            <button class="button is-primary" type="submit">Submit</button>
          </div>
        </div>

      </form>
    </div>
  </div>
</div>

<script src="/javascript/add-post.js"></script>
