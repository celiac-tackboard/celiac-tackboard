{{! ///// User Profile Comments Partial \\\\\ }}

{{#each this}}
  <div class="tile">
    <div class="tile is-parent is-vertical is-light">
      <div class="card is-primary-box mb-1">
        <header class="card-header">
          <a
            class="card-header-title block has-text-link is-size-6 is-italic mb-0"
            href="/post/{{post.id}}"
          >{{post.title}}</a>
        </header>
        <div class="card-content py-2">
          <div class="content">
            <div class="block my-1 is-size-6">{{comment_text}}</div>
          </div>

          <nav class="level">
            <div class="level-item has-text-centered">
              <div>
                <p class="heading">Created On</p>
                <p class="title is-6">
                  {{format_date createdAt}}
                </p>
              </div>
            </div>
          </nav>
        </div>
      </div>
    </div>
  </div>
{{/each}}